@using Microsoft.AspNetCore.Identity
@using Olympus.Areas.Identity.Data

@inject SignInManager<OlympusUser> SignInManager
@inject UserManager<OlympusUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="btn-clickable nav-link btn btn-link text-dark border-0">Logout</button>
    </form>
}
else
{
    <button class="btn-clickable nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</button>
    <button class="btn-clickable nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</button>
}
