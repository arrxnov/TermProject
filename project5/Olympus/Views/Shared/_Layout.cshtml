<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>APE</title>
    <link rel="icon" href="~/img/favicon/favicon-96x96.png">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/datatables.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap">
</head>

<body>

    <header>
        <img src="~/img/ape-no-bg.png" id="icon" alt="image of an ape reading">

        <h1>APE</h1>

        <div id="headerBtns">
            <button class="btn" id="save">Save</button>
            <ul class="menu">
                <li>
                    <p class="btn-clickable" id="optionsHeader">Options</p>
                    <ul runat="server" class="subMenu">
                        <li>
                            <p>Themes</p>
                            <ul id="themeSubMenu"></ul>
                        </li>
                        @RenderSection("Options", required: false)
                        <li>
                            <p>About</p>
                        </li>
                        <li>
                            <p>Help</p>
                        </li>
                        <li>
                            <p>Report Bug</p>
                        </li>
                    </ul>
                </li>
            </ul>
            <partial name="_LoginPartial" />
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script src="~/js/datatables.js"></script>
    <script src="~/js/ape.js" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>