@model IEnumerable<Olympus.Models.aspnetuser>

@{
    ViewData["Title"] = "Admin";
    Layout = "_Layout";
}

@section Options {

}

@section Scripts {
    <script src="~/js/admin.js" defer></script>
}

<div>
    <div class="labels">Admin Tools</div>
    <div class="basicContainer">
        <button class="btn-clickable" asp-action="Create">Create New Admin</button>
    </div>
    <div class="basicContainer">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName) | 
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email) | 
                        </td>
                        <td>
                            <button class="btn-clickable" asp-action="Edit" asp-route-id="@item.Id">Edit</button> |
                            <button class="btn-clickable" asp-action="Details" asp-route-id="@item.Id">Details</button> |
                            <button class="btn-clickable" asp-action="Delete" asp-route-id="@item.Id">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>