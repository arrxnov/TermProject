@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1 class="labels">@ViewData["Title"]</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 basicContainer">
                <input asp-for="Input.Email" class="form-control btn-clickable" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 basicContainer">
                <input asp-for="Input.Password" class="form-control btn-clickable" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 basicContainer">
                <input asp-for="Input.ConfirmPassword" class="form-control btn-clickable" autocomplete="new-password" aria-required="true" placeholder="confirm password" />
            </div>
            <div class="basicContainer">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary btn-clickable">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
